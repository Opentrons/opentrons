{
  "repository": {
    "type": "git",
    "url": "https://github.com/OpenTrons/opentrons.git"
  },
  "author": {
    "name": "Opentrons Labworks",
    "email": "engineering@opentrons.com"
  },
  "name": "protocol-designer",
  "private": true,
  "version": "3.0.0",
  "description": "Protocol designer app",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "flow": "flow check",
    "lint": "standard; stylelint '**/*.css'",
    "build": "cross-env NODE_ENV=production webpack -p && cp index.html dist/",
    "start": "cross-env NODE_ENV=development webpack-dev-server --hot"
  },
  "jest": {
    "transformIgnorePatterns": [
      "/node_modules/(?!@opentrons/)"
    ],
    "moduleNameMapper": {
      "\\.(css)$": "identity-obj-proxy"
    }
  },
  "bugs": {
    "url": "https://github.com/OpenTrons/opentrons/issues"
  },
  "homepage": "https://github.com/OpenTrons/opentrons",
  "license": "UNLICENSED",
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ],
    "globals": [
      "SyntheticEvent",
      "$Keys"
    ],
    "env": [
      "node",
      "browser",
      "jest"
    ],
    "ignore": [
      "**/dist/**",
      "**/flow-typed/**"
    ]
  },
  "stylelint": {
    "rules": {
      "selector-class-pattern": "^[a-z0-9_]+$"
    },
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-css-modules",
      "stylelint-config-lost"
    ],
    "ignoreFiles": [
      "**/dist/**",
      "**/coverage/**"
    ]
  },
  "dependencies": {
    "@opentrons/components": "^3.0.0",
    "classnames": "^2.2.5",
    "google-fonts-webpack-plugin": "^0.4.3",
    "lodash": "^4.17.4",
    "normalize.css": "^7.0.0",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.1.1",
    "redux": "^3.7.2",
    "redux-actions": "^2.2.1",
    "redux-thunk": "^2.2.0",
    "reselect": "^3.0.1"
  },
  "devDependencies": {
    "@opentrons/webpack-config": "^3.0.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.25.0",
    "babel-eslint": "8.0.3",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.4",
    "eslint-plugin-flowtype": "^2.41.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "flow-bin": "^0.63.0",
    "flow-typed": "^2.2.3",
    "jest": "^21.2.1",
    "lost": "^8.2.0",
    "postcss": "^6.0.16",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.0.10",
    "react-hot-loader": "^3.0.0-beta.7",
    "snazzy": "^7.0.0",
    "standard": "^10.0.3",
    "style-loader": "^0.18.2",
    "stylelint": "^8.2.0",
    "stylelint-config-css-modules": "^1.1.0",
    "stylelint-config-lost": "^0.0.3",
    "stylelint-config-standard": "^17.0.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.1.0",
    "webpack-dev-server": "^2.5.1"
  }
}
