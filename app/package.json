    "karma-mocha": "1.3.0",
    "karma-sourcemap-loader": "0.3.7",
    "karma-spec-reporter": "0.0.31",
    "karma-webpack": "2.0.3",
    "mocha": "3.4.2",
    "node-sass": "4.5.3",
    "sass-loader": "6.0.6",
    "shelljs": "0.7.8",
    "sinon": "2.3.4",
    "spectron": "3.6.4",
